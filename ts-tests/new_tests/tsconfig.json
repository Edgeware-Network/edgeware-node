{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "importHelpers": true,
        "resolveJsonModule": true,
    
      "target": "esnext",
      "sourceMap": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/"
    },
    "include": [
      "src/*",
      "node_modules/*"
    ],
    "exclude": [
      "**/*.spec.ts",
      "./node_modules"
    ]
  }
  
